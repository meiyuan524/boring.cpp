//This is example from Textbook <c++, how to program>
//one of the "classy" example that explains 
//function that takes no argument


#include <iostream>
using std::cout;
using std::endl;

void function1();
void function2(void);

int main()
{
	function1();
	function2();
	return 0;
}

//function1 uses an empty parameter list to specify that 
// the function receives no arguments

void function1()
{
	cout<<"function1 takes no arguments" <<endl;
}

//function2 uses a void parameter list to specify that
// the function receives no arguments
void function2()
{
	cout<<"function2 also takes no arguments" <<endl;;
}
